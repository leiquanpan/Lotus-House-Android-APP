<FrameLayout
    android:id="@+id/single_control"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/temp_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:padding="@dimen/control_padding"
        android:text="@string/increase_temp"
        android:textColor="@color/lovely_color"
        android:textSize="@dimen/control_temp_size" />

    <TextView
        android:id="@+id/current_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/lovely_color"
        android:textSize="@dimen/temp_text_size" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/current_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="367dp"
            android:text="123"
            android:textColor="@color/lovely_color"
            android:textSize="24sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/temp_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:padding="@dimen/control_padding"
        android:text="@string/decrease_temp"
        android:textColor="@color/lovely_color"
        android:textSize="@dimen/control_temp_size" />


</FrameLayout>
